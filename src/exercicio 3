public class ExerciciosJava {
    
  public static void main(String[] args){
      Scanner entrada = new Scanner(System.in);
    
        Integer dadosinvalidos = 70;

  
        try (Scanner scanner = new Scanner(System.in)) {
          System.out.println("Informe o primeiro número :");
          double Nota = scanner.nextInt();
          
          System.out.println("Informe o segundo número :");
          double Nota2 = scanner.nextInt();
          
          double dados = (Nota + Nota2) / 2 ;
          Boolean Aluno = Nota >= dadosinvalidos;
          
          System.out.println("resultado: " + dados);
          
          if (Aluno) {
              System.out.println("OPERAÇÃO CONCLUIDA ");
          } else {
              System.out.println(" DADOS DE ENTRADA SÃO INVALIDOS.");
              
              
              
          }
      }

    }

}
